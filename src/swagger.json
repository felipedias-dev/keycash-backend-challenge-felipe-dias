{
  "openapi": "3.0.0",
  "info": {
    "title": "Real Estate API Documentation",
    "description": "This is a CRUD API for Real Estate business",
    "version": "1.0.0",
    "contact": {
      "email": "felipedias.dev@gmail.com"
    }
  },
  "paths": {
    "/properties": {
      "post": {
        "tags": ["Property"],
        "description": "Create a property",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#definitions/Property",
                "example": {
                  "title": "Property title sample",
                  "description": "Property description sample",
                  "category": "Property category sample",
                  "area": 100,
                  "useful_area": 80,
                  "rooms": 3,
                  "parking": 1
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Property already exists"
          }
        }
      },
      "get": {
        "tags": ["Property"],
        "description": "List all properties",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#definitions/Property"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Property": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "area": {
          "type": "integer"
        },
        "useful_area": {
          "type": "integer"
        },
        "rooms": {
          "type": "integer"
        },
        "parking": {
          "type": "integer"
        }
      }
    }
  }
}